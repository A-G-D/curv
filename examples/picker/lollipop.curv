// This is experimental syntax for declaring parameters that are bound
// to graphical sliders in the Viewer window. It may change.

parametric {
    diam :: slider(.5, 2) = 1;
    len :: slider(2, 8) = 4;
}
union(candy, stick)
where (
    candy = sphere diam >> colour red;
    stick = cylinder {h: len, d: diam/8} >> move(0,0,-len/2);
)
