shell r shape = make_shape {
    dist p : abs(shape.dist p) - r,
    bbox : [shape.bbox[MIN]-r, shape.bbox[MAX]+r],
    is_2d : shape.is_2d,
    is_3d : shape.is_3d,
};
path = shell 0 (circle 1);
path2 = difference(path, rect((-inf,0,-inf),(inf,inf,inf)));
