runion(s1,s2) = make_shape {
    dist p = (
        var a := s1.dist p;
        var b := s2.dist p;
        /*a + b + sqrt(a^2 + b^2)*/
        -( (-a) + (-b) + sqrt(a^2 + b^2))
    ),
    is_2d = s1.is_2d && s2.is_2d,
    is_3d = s1.is_3d && s2.is_3d,
};

smooth_union .5 (
  circle 2,
  rect_eu(2,2) >> translate(2,2),
) >> distance_field
