let
// f() returns true or false. Execute f() on the GPU, colour the world
// green if it is true, red if it is false.
gl_assert(f) = make_shape {
    dist : everything.dist,
    colour p : [1-bit(f()), bit(f()), 0],
    is_2d : true,
};
fact n = (
    var i := 1;
    var r := 1;
    while (i <= n) (
        r := r * i;
        i := i + 1;
    );
    r
);
echo (fact 5);
assert(fact 5 == 120);

in
gl_assert(()->(fact 5 == 120))
