xrotate a shape =
  make_shape { // rotation around the X axis
    dist p : shape.dist(p'X, cos(a)*p'Y + sin(a)*p'Z, cos(a)*p'Z - sin(a)*p'Y),
    colour p : shape.colour(p'X, cos(a)*p'Y + sin(a)*p'Z, cos(a)*p'Z - sin(a)*p'Y),
    bbox : shape.bbox,
    is_3d : true,
  };

torus(2,1)
    >> colour (radial_rainbow 1)
    >> xrotate(tau/4)
    >> twist 1
