// Credit: @gsohler

let
    include lib.blend;
    show_grid pitch shape =
        make_shape {
            dist p = shape.dist p;
            colour p =
                if (
                    mod[abs(p@X)+(0.001+pitch)/2,pitch] < 0.01 ||
                    mod[abs(p@Y)+(0.001+pitch)/2,pitch] < 0.01 ||
                    mod[abs(p@Z)+(0.001+pitch)/2,pitch] < 0.01
                )
                    black
                else
                    white;
            bbox = shape.bbox;
            is_2d = shape.is_2d;
            is_3d = shape.is_3d;
        };
in
columns [0.5, 3] .union [sphere, cube >> move[1,1,1]]
  >> lipschitz 2
  >> show_grid 0.3
